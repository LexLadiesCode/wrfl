= form_for(@play) do |f|
  = f.hidden_field :track_id
  = f.hidden_field :album_id
  
  .field
    = label_tag :artist_name
    %br
    = text_field_tag :artist_name
  .field
    = label_tag :track_name
    %br
    = text_field_tag :track_name
  .field
    = label_tag :album_name
    %br
    = text_field_tag :album_name
  .actions
    = f.submit class: 'btn btn-primary'
